extends: default

rules:
  line-length:
    max: 120  # Maximale Zeilenl√§nge
    level: warning

  document-start: disable

  indentation:
    spaces: 2
    indent-sequences: false

  trailing-spaces: enable

  key-duplicates: enable

  empty-lines: enable

  new-lines: disable

  truthy: disable

ignore: |
  .venv
  .git
